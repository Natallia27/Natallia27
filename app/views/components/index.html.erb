<h1>Listing components</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Ingredient</th>
      <th>Qty</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.product_id %></td>
        <td><%= component.ingredient_id %></td>
        <td><%= component.qty %></td>
        <td><%= component.created_by %></td>
        <td><%= component.updated_by %></td>
        <td><%= link_to 'Show', component %></td>
        <td><%= link_to 'Edit', edit_component_path(component) %></td>
        <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Component', new_component_path %>
