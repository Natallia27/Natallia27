<h2>Editar mi cuenta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :first_name, label: "Nombre", required: true, autofocus: true %>
    <%= f.input :last_name, label: "Apellido", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Contraseña", autocomplete: "off", hint: "Déjalo en blanco si no quieres cambiar tu contraseña", required: false %>
    <%= f.input :password_confirmation, label: "Confirmar Contraseña", required: false %>
    <%= f.input :current_password, label: "Contraseña actual", hint: "Necesitamos tu contraseña actual para confirmar los cambios", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualizar" %>
  </div>
<% end %>